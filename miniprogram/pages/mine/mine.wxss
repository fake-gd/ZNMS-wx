/* 添加页面样式 */
.background-image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}
.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.options {
  margin-top: 20px;
}

.options button {
  margin-bottom: 10px;
}
button {
  margin-top: 20px;
  padding: 5px 20px;
}
.lock-info {
  margin-top: 10px; /* 增加一些间距使其与用户名分开 */
}