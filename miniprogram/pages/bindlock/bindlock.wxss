.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 20px;
  background-color: #f8f8f8;
}

text {
  font-size: 18px;
  margin-bottom: 20px;
  color: #333;
}

input {
  width: 80%;
  padding: 10px;
  margin-bottom: 20px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px;
}

button {
  width: 80%;
  padding: 10px;
  background-color: #1cbbb4;
  color: white;
  text-align: center;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}

button:active {
  background-color: #1c8b9c;
}